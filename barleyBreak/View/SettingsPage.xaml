<UserControl x:Class="barleyBreak.View.SettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:uiControll="clr-namespace:barleyBreak.View.UIControll"
             xmlns:local="clr-namespace:barleyBreak.View"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBox  Grid.Row="0" x:Name="tbName" BorderBrush="Transparent"  Text="Vasia" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" MaxLength="7" />
        <Button Grid.Row="1" x:Name="btnDifficult" Style="{StaticResource MenuButton}" Content="Middle" Click="btnDifficult_Click"></Button>
        <Button Grid.Row="2" x:Name="btnExit" Style="{StaticResource MenuButton}" Content="Return" Click="btnExit_Click" ></Button>
    </Grid>
</UserControl>
