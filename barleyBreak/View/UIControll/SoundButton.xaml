<UserControl x:Class="barleyBreak.View.UIControll.SoundButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:barleyBreak.View.UIControll"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="40">
    <Grid>
        <Image MouseLeftButtonUp="Sound_OnMouseLeftButtonUp" Name="Sound"  Source="/img/sound.png" Stretch="Uniform"  Height="30" HorizontalAlignment="Center" VerticalAlignment="Center"></Image>
        <Image MouseLeftButtonUp="Sound_OnMouseLeftButtonUp" Name="Off"  Visibility="Hidden" Source="/img/stop.png" Stretch="Uniform" Height="25" HorizontalAlignment="Center" Margin="0,0,5,0" VerticalAlignment="Center"></Image>
    </Grid>
</UserControl>
