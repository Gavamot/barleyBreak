<UserControl x:Class="barleyBreak.View.UIControll.AIButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:barleyBreak.View.UIControll"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Image MouseLeftButtonUp="AI_OnMouseLeftButtonUp" Name="AI"  Source="/img/ai.png" Stretch="Uniform"  Height="38" HorizontalAlignment="Center" VerticalAlignment="Center"></Image>
        <Image MouseLeftButtonUp="AI_OnMouseLeftButtonUp" Name="Off"  Visibility="Visible" Source="/img/stop.png" Stretch="Uniform" Height="25" HorizontalAlignment="Center" Margin="0,0,5,0" VerticalAlignment="Center"></Image>
    </Grid>
</UserControl>
